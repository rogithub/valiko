{
    "compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": true,
		"experimentalDecorators": true, 
		"emitDecoratorMetadata": true,
		"target": "es5",
		"lib": [ "es2015", "es5", "dom" ],
		"outDir": "release"
	},
	"exclude": [
		"node_modules",
		"test"
	],
	"compileOnSave": true
}
